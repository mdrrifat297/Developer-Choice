<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Centered Logo with subtle shadow -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:src="@drawable/your_logo"
        android:contentDescription="@string/app_logo_description"
        android:elevation="8dp"
        android:alpha="0.9" />

    <!-- App Name or Tagline Text below the logo -->
    <TextView
        android:id="@+id/tagline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Empowering Your Future"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:alpha="0.8" />

    <!-- Bottom Progress Bar for loading indication -->
    <ProgressBar
        android:id="@+id/bottom_loader"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:indeterminate="true"
        android:indeterminateTint="#FFFFFF" />

</RelativeLayout>
